@model Models.SearchCriteria.DepartmentSearchCriteria

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model.Departments)
    {
        using (Html.BeginForm("Delete", "DepartMent", new { id = item.Id }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "DepartMent", new {id = item.Id})" class="btn btn-primary">

                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    <a href="@Url.Action("Details", "DepartMent", new {id = item.Id})" class="btn btn-success">

                        <span class="glyphicon glyphicon-list-alt"></span>
                    </a>

                    <button type="submit" class="btn btn-danger" value="" onclick=" return confirm('are you sure? you want to delete this id=@item.Id' );">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </td>
            </tr>
        }
    }

</table>
